{
  "dashboard": {
    "id": null,
    "title": "API Gateway Detailed Metrics",
    "tags": ["api-gateway", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"api-gateway\"}[5m])) by (method, uri)",
            "legendFormat": "{{method}} {{uri}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "increase(http_server_requests_seconds_bucket{job=\"api-gateway\"}[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Status Code Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"api-gateway\"}[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Top Slowest Endpoints",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, avg(http_server_requests_seconds{quantile=\"0.95\", job=\"api-gateway\"}) by (uri, method))",
            "legendFormat": "{{method}} {{uri}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 16,
          "x": 8,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state{job=\"api-gateway\"}",
            "legendFormat": "{{name}} - {{state}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {"text": "CLOSED"},
                  "1": {"text": "HALF_OPEN"},
                  "2": {"text": "OPEN"}
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Request Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"api-gateway\"}[5m])) by (uri)",
            "legendFormat": "{{uri}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 22
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}